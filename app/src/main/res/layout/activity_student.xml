<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        android:id="@+id/civStdDP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvStdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Leeroy Kigo"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/civStdDP"
        app:layout_constraintTop_toBottomOf="@+id/civStdDP" />

    <TextView
        android:id="@+id/txvSdReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SCT222-0138/2019"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txvStdName"
        app:layout_constraintTop_toBottomOf="@+id/txvStdName" />

    <TextView
        android:id="@+id/txvStdCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Business Computing"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txvSdReg"
        app:layout_constraintTop_toBottomOf="@+id/txvSdReg" />

</androidx.constraintlayout.widget.ConstraintLayout>